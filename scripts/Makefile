#======================================================================
# @(#) $Id$
# Makefile for all SIM helper scripts
#======================================================================

SCRIPTS = \
	l2b_eval \
	l2b_metrics_plot \
	sim_script \
	sim_script_update \
	process_script \
	grid_script \
	l2b_rms_plot \
	generate_kprtable

#----------------------------------------------------------------------
# default: make sure all scripts are checked out
#----------------------------------------------------------------------

default: $(SCRIPTS)

#----------------------------------------------------------------------
# clean: remove all scripts
#----------------------------------------------------------------------

clean:
	- /bin/rm -f $(SCRIPTS)

#----------------------------------------------------------------------
# install: same as default (nothing to install)
#----------------------------------------------------------------------

install: $(SCRIPTS)

#----------------------------------------------------------------------
# rules
#----------------------------------------------------------------------

%: $(SIM_CENTRAL_TREE)/src/scripts/RCS/%,v
	co $(SIM_CENTRAL_TREE)/src/scripts/RCS/$@,v
